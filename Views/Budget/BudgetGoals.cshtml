@model MSPremiumProject.ViewModels.ObjetivosViewModel

@{
    ViewData["Title"] = $"Orçamento Qualidade do Ar - {Model.NomeCliente}";
    Layout = "~/Views/Shared/_Layout.cshtml"; // O Layout irá controlar a sidebar
}

<div class="container-fluid mt-4">
    <form asp-action="Objetivos" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PropostaId" />
        <input type="hidden" asp-for="QualidadeDoArId" />

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Objetivos do Orçamento</h1>
        </div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="card bg-white" style="border: 1px solid #dee2e6;">
            <div class="card-body p-4">
                <h5 class="mb-3">Possíveis tratamentos</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsolamentoExternoSATE" id="IsolamentoExternoSATE">
                            <label class="form-check-label" for="IsolamentoExternoSATE">
                                Isolamento externo com S.A.T.E.
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsolamentoInteriorPladur" id="IsolamentoInteriorPladur">
                            <label class="form-check-label" for="IsolamentoInteriorPladur">
                                Isolamento interior com placas de gesso cartonado laminado (Pladur)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="InjeccaoCamaraArPoliuretano" id="InjeccaoCamaraArPoliuretano">
                            <label class="form-check-label" for="InjeccaoCamaraArPoliuretano">
                                Injeção de câmaras de ar de poliuretano
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="TrituracaoCorticaTriturada" id="TrituracaoCorticaTriturada">
                            <label class="form-check-label" for="TrituracaoCorticaTriturada">
                                Trituração/moagem de cortiça triturada
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="AplicacaoTintaTermica" id="AplicacaoTintaTermica">
                            <label class="form-check-label" for="AplicacaoTintaTermica">
                                Aplicação de tinta térmica
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ImpermeabilizacaoFachadas" id="ImpermeabilizacaoFachadas">
                            <label class="form-check-label" for="ImpermeabilizacaoFachadas">
                                Impermeabilização de fachadas
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="TubagemParedesInfiltracao" id="TubagemParedesInfiltracao">
                            <label class="form-check-label" for="TubagemParedesInfiltracao">
                                Tubagem das paredes afetadas pela infiltração
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="InjeccaoParedesAccaoCapilar" id="InjeccaoParedesAccaoCapilar">
                            <label class="form-check-label" for="InjeccaoParedesAccaoCapilar">
                                Injeção de paredes afetadas pela acção capilar
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="EvacuacaoHumidadeExcesso" id="EvacuacaoHumidadeExcesso">
                            <label class="form-check-label" for="EvacuacaoHumidadeExcesso">
                                Evacuação da humidade ambiente em excesso
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mt-4 alert alert-success text-center" role="alert">
                    De acordo com as medições de habitabilidade e higrometria propomos uma solução com 100% de garantia
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-warning px-4"><i class="bi bi-save me-2"></i>Analisar</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}