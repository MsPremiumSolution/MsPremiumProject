@model MSPremiumProject.ViewModels.ObjetivosViewModel

@{
    ViewData["Title"] = $"Orçamento Qualidade do Ar - {Model.NomeCliente}";
    Layout = "~/Views/Shared/_Layout.cshtml"; // O Layout irá controlar a sidebar
}

<div class="container-fluid mt-4">
    <form asp-action="Objetivos" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PropostaId" />
        <input type="hidden" asp-for="QualidadeDoArId" />

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Coleção de dados</h1>
        </div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["MensagemSucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["MensagemErro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <ul class="nav nav-tabs" id="colecaoDadosTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="dados-construtivos-tab"
                   href="@Url.Action("EditQualidadeDoAr", "Budget", new { id = Model.QualidadeDoArId })"
                   role="tab" aria-controls="construtivos-pane" aria-selected="false">Dados construtivos</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="higrometria-tab"
                   href="@Url.Action("Higrometria", "Budget", new { id = Model.QualidadeDoArId })"
                   role="tab" aria-controls="higrometria-pane" aria-selected="false">Higrometria</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="sintomatologia-tab"
                   href="@Url.Action("Sintomatologia", "Budget", new { id = Model.QualidadeDoArId })"
                   role="tab" aria-controls="sintomatologia-pane" aria-selected="false">Sintomatologia</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="objetivos-tab"
                   href="@Url.Action("Objetivos", "Budget", new { id = Model.QualidadeDoArId })"
                   role="tab" aria-controls="objetivos-pane" aria-selected="true">Objetivos</a>
            </li>
        </ul>

        <div class="tab-content bg-white card-body" id="colecaoDadosTabContent" style="border: 1px solid #dee2e6; border-top: none;">
            <!-- O conteúdo das outras abas não é renderizado aqui,
                 pois cada aba agora é um link para uma ação separada.
                 Apenas a aba ativa (Objetivos) tem conteúdo real. -->
            <div class="tab-pane fade show active p-4" id="objetivos-pane" role="tabpanel" aria-labelledby="objetivos-tab">
                <h5 class="mb-3">Possíveis tratamentos</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsolamentoExternoSATE" id="IsolamentoExternoSATE">
                            <label class="form-check-label" for="IsolamentoExternoSATE">
                                Isolamento externo com S.A.T.E.
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsolamentoInteriorPladur" id="IsolamentoInteriorPladur">
                            <label class="form-check-label" for="IsolamentoInteriorPladur">
                                Isolamento interior com placas de gesso cartonado laminado (Pladur)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="InjeccaoCamaraArPoliuretano" id="InjeccaoCamaraArPoliuretano">
                            <label class="form-check-label" for="InjeccaoCamaraArPoliuretano">
                                Injeção de câmaras de ar de poliuretano
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="TrituracaoCorticaTriturada" id="TrituracaoCorticaTriturada">
                            <label class="form-check-label" for="TrituracaoCorticaTriturada">
                                Trituração/moagem de cortiça triturada
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="AplicacaoTintaTermica" id="AplicacaoTintaTermica">
                            <label class="form-check-label" for="AplicacaoTintaTermica">
                                Aplicação de tinta térmica
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ImpermeabilizacaoFachadas" id="ImpermeabilizacaoFachadas">
                            <label class="form-check-label" for="ImpermeabilizacaoFachadas">
                                Impermeabilização de fachadas
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="TubagemParedesInfiltracao" id="TubagemParedesInfiltracao">
                            <label class="form-check-label" for="TubagemParedesInfiltracao">
                                Tubagem das paredes afetadas pela infiltração
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="InjeccaoParedesAccaoCapilar" id="InjeccaoParedesAccaoCapilar">
                            <label class="form-check-label" for="InjeccaoParedesAccaoCapilar">
                                Injeção de paredes afetadas pela acção capilar
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="EvacuacaoHumidadeExcesso" id="EvacuacaoHumidadeExcesso">
                            <label class="form-check-label" for="EvacuacaoHumidadeExcesso">
                                Evacuação da humidade ambiente em excesso
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i>Guardar e continuar</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Este script é necessário para simular o comportamento de "abas ativas" quando a página carrega.
        // Como cada "aba" agora é uma página diferente, o Bootstrap não ativará automaticamente.
        document.addEventListener('DOMContentLoaded', function() {
            var activeTabId = '@ViewData["ActiveSubmenuLink"]'; // Assume que o Controller define isso
            if (activeTabId === 'Objetivos') {
                document.getElementById('objetivos-tab')?.classList.add('active');
                document.getElementById('objetivos-tab')?.setAttribute('aria-selected', 'true');
                document.getElementById('objetivos-pane')?.classList.add('show', 'active');
            }
            // Para garantir que as outras abas não estejam ativas por padrão se o JavaScript não for executado corretamente
            document.querySelectorAll('.nav-link:not(#objetivos-tab)').forEach(function(tab) {
                tab.classList.remove('active');
                tab.setAttribute('aria-selected', 'false');
            });
            document.querySelectorAll('.tab-pane:not(#objetivos-pane)').forEach(function(pane) {
                pane.classList.remove('show', 'active');
            });
        });
    </script>
}