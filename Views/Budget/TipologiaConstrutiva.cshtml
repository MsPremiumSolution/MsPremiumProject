@model IEnumerable<MSPremiumProject.Models.TipologiaConstrutiva>

@{
    ViewData["Title"] = "Tipologia Construtiva";
    var clienteNome = Context.Session.GetString("CurrentBudget_ClienteNome");
}

<style>
    /* O teu CSS continua aqui... */
    .construction-type-card {
        border: 2px solid #e9ecef;
        border-radius: 0.5rem;
        overflow: hidden;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        display: block;
        text-decoration: none;
        color: inherit;
    }

        .construction-type-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            border-color: #0d6efd;
        }

        .construction-type-card.selected {
            border-color: #198754;
            border-width: 3px;
            box-shadow: 0 0 0 4px rgba(25, 135, 84, 0.25);
        }

        .construction-type-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .card-body {
        padding: 1rem;
        text-align: center;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">@ViewData["Title"]</h1>
            <p class="text-muted">Orçamento para: <strong>@clienteNome</strong></p>
        </div>
    </div>

    <form asp-action="SaveTipologiaAndContinue" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" id="selectedTipologiaId" name="selectedTipologiaId" value="@Model.FirstOrDefault(t => t.Nome == "Apartamento em comunidade")?.TipologiaConstrutivaId" />

        <div class="row g-4" id="tipologiaContainer">

            <!-- Card 1: Apartamento em comunidade -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card selected" data-value="@Model.FirstOrDefault(t => t.Nome == "Apartamento em comunidade")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/teste.png" alt="Apartamento em comunidade" asp-append-version="true" />

                    <div class="card-body">
                        <h5 class="card-title">Apartamento em comunidade</h5>
                    </div>
                </div>
            </div>

            <!-- Card 2: Casas geminadas -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Casas geminadas")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/casasGeminadas.png" alt="Casas geminadas" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Casas geminadas</h5>
                    </div>
                </div>
            </div>

            <!-- Card 3: Garagem comunitária -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Garagem comunitária")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/garagem-comunitaria.jpg.jpg" alt="Garagem comunitária" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Garagem comunitária</h5>
                    </div>
                </div>
            </div>

            <!-- Card 4: Garagem individual -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Garagem individual")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/garagem-individual.jpg.jpg" alt="Garagem individual" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Garagem individual</h5>
                    </div>
                </div>
            </div>

            <!-- Card 5: Instalações comerciais -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Instalações comerciais")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/instalacoes-comerciais.jpg.jpg" alt="Instalações comerciais" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Instalações comerciais</h5>
                    </div>
                </div>
            </div>

            <!-- Card 6: Poço do elevador -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Poço do elevador")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/poco-elevador.jpg.jpg" alt="Poço do elevador" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Poço do elevador</h5>
                    </div>
                </div>
            </div>

            <!-- Card 7: Portal -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Portal")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/portal.jpg.jpg" alt="Portal" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Portal</h5>
                    </div>
                </div>
            </div>

            <!-- Card 8: Residência Unifamiliar -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Residência Unifamiliar")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/residencia-unifamiliar.jpg.jpg" alt="Residência Unifamiliar" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Residência Unifamiliar</h5>
                    </div>
                </div>
            </div>

            <!-- Card 9: Salas de armazenamento -->
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="construction-type-card" data-value="@Model.FirstOrDefault(t => t.Nome == "Salas de armazenamento")?.TipologiaConstrutivaId">
                    <img src="~/images/Tipologias/salas-armazenamento.jpg.jpg" alt="Salas de armazenamento" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">Salas de armazenamento</h5>
                    </div>
                </div>
            </div>

        </div>

        <div class="mt-5 d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
            <button type="submit" class="btn btn-primary btn-lg">
                Salvar e continuar <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const container = $('#tipologiaContainer');
            const hiddenInput = $('#selectedTipologiaId');

            container.on('click', '.construction-type-card', function() {
                // Remove a classe 'selected' de todos os cards
                container.find('.construction-type-card').removeClass('selected');

                // Adiciona a classe 'selected' apenas ao card clicado
                $(this).addClass('selected');

                // Atualiza o valor do campo escondido com o ID do card selecionado
                const selectedId = $(this).data('value');
                hiddenInput.val(selectedId);
            });
        });
    </script>
}