@model IEnumerable<MSPremiumProject.Models.Cliente>

@{
    ViewData["Title"] = "Selecionar Cliente para Orçamento"; // Já definido no controller, mas pode ficar
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        @* Poderia ter um botão para ir para a lista de clientes normais se quisesse adicionar um novo *@
        @* <a asp-controller="Client" asp-action="Create" class="btn btn-info">
            <i class="bi bi-person-plus-fill me-2"></i> Gerir Clientes
        </a> *@
    </div>

    @* Mensagens TempData *@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensagemInfo"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["MensagemInfo"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    @* Barra de Pesquisa *@
    <form asp-controller="Orcamento" asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Pesquisar por Nome ou NIF...">
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Pesquisar</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
            {
                <a asp-controller="Orcamento" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i> Limpar
                </a>
            }
        </div>
    </form>

    @if (!Model.Any() && string.IsNullOrEmpty(ViewData["CurrentFilter"] as string) && TempData["MensagemInfo"] == null)
    {
        <div class="alert alert-info text-center" role="alert">
            Nenhum cliente encontrado. <a asp-controller="Client" asp-action="Create" class="alert-link">Adicione clientes primeiro</a> na gestão de clientes.
        </div>
    }
    else if (Model.Any())
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NumeroFiscal)</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NumeroFiscal)</td>
                                    <td class="text-end">
                                        <a asp-controller="Orcamento" asp-action="CriarSimulacao" asp-route-id="@item.ClienteId" class="btn btn-sm btn-success">
                                            <i class="bi bi-plus-circle-fill me-1"></i> Criar Simulação
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>