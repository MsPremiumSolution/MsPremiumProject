@model IEnumerable<MSPremiumProject.Models.Cliente>

@{
    ViewData["Title"] = ViewData["Title"]?.ToString() ?? "Novo Orçamento - Selecionar Cliente"; // Usa o título do controller
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        @* Poderias ter um botão aqui para voltar ou outra ação, se necessário *@
    </div>

    @* Mensagens ViewData (transferidas do TempData no controller) *@
    @if (ViewData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Formulário de Pesquisa *@
    <form asp-controller="Budget" asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Pesquisar cliente por nome ou apelido..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i> Pesquisar</button>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <a asp-controller="Budget" asp-action="Index" class="btn btn-outline-danger" title="Limpar Pesquisa">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <span>Nenhum cliente encontrado para o termo "@ViewData["CurrentFilter"]".</span>
                <a asp-action="Index" asp-controller="Budget" class="alert-link ms-2">Ver todos os clientes.</a>
            }
            else
            {
                <span>Nenhum cliente registado.</span>
                <a asp-action="Create" asp-controller="Client" class="alert-link ms-2">Adicione o primeiro cliente.</a>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Nome)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Apelido)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Telefone1)</th>
                                <th>Localidade</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Apelido)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefone1)</td>
                                    <td>
                                        @(item.LocalidadeNavigation != null ? Html.DisplayFor(modelItem => item.LocalidadeNavigation.NomeLocalidade) : "N/A")
                                    </td>
                                    <td class="text-end">
                                        @* Botão para criar orçamento para este cliente *@
                                        <a asp-controller="Budget" asp-action="CreateBudgetForClient" asp-route-id="@item.ClienteId" class="btn btn-sm btn-success" title="Criar Orçamento para este Cliente">
                                            <i class="bi bi-file-earmark-plus-fill"></i> Selecionar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>