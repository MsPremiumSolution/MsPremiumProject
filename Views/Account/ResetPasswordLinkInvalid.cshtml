@{
    ViewData["Title"] = "Link Inválido";
     Layout = "Layout";
}

<div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-4 p-sm-5 text-center">
                <h2>Link Inválido ou Expirado</h2>
                @if (TempData["ErrorMessage"] != null)
                {
                    <p class="text-muted mt-3">@TempData["ErrorMessage"]</p>
                }
                else
                {
                    <p class="text-muted mt-3">
                        O link que utilizou para redefinir a sua password é inválido ou já expirou.
                    </p>
                }
                <p class="text-muted">Por favor, solicite um novo link de redefinição de password.</p>
                <div class="mt-4">
                    <a asp-action="ForgotPassword" class="btn btn-primary">Pedir Novo Link</a>
                    <a asp-action="Login" class="btn btn-secondary ms-2">Voltar ao Login</a>
                </div>
            </div>
        </div>
    </div>
</div>