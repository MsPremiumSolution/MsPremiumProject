@model MSPremiumProject.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Esqueci a Password";
     Layout = "_Layout"; // Considere um layout específico se desejar
}

<div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-4 p-sm-5">
                <div class="text-center mb-4">
                    <h2>Esqueceu a Password?</h2>
                    <p class="text-muted">Insira o seu login (email) e enviaremos um link para o seu email registado para redefinir a sua password.</p>
                </div>

                <form asp-action="ForgotPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Login" class="form-control" placeholder="O seu Login (Email)" />
                        <label asp-for="Login"></label>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Enviar Link de Redefinição</button>
                    </div>

                    <div class="text-center">
                        <a asp-action="Login" class="text-decoration-none">Voltar ao Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}