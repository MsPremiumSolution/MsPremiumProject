        /* ----------------------------------------- */
        /* ESTILOS PARA DESKTOP (Ecrãs maiores que 992px) */
        /* ----------------------------------------- */
        @@media (min-width: 992px) {
            .sidebar {
                transform: translateX(0); /* Sidebar sempre visível em desktop */
            }
            /* Esconde o botão hambúrguer em desktop, pois a sidebar é sempre visível */
            #menuToggleBtn {
                display: none;
            }

            .content-wrapper {
                margin-left: 250px; /* Adiciona a margem para a sidebar visível */
            }
        }

        /* Estilos de submenu (não precisam de ser alterados) */
        .nav-link.has-active-submenu {
            background-color: #0056b3;
            border-left: 4px solid #ffc107;
            padding-left: calc(0.75rem - 4px);
        }

        .submenu {
            padding-left: 20px;
            background-color: rgba(0,0,0,0.1);
            border-left: 3px solid #ffc107;
            margin-left: 10px;
            border-radius: 0 5px 5px 0;
            padding-bottom: 10px;
        }

            .submenu .nav-link {
                font-size: 0.9em;
                padding-top: .4rem;
                padding-bottom: .4rem;
            }

        .submenu-item-circle {
            display: inline-block;
            width: 14px;
            height: 14px;
            border: 2px solid rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            margin-right: 10px;
            vertical-align: middle;
            transition: background-color 0.2s, border-color 0.2s;
        }

        .submenu a.nav-link.active .submenu-item-circle {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .submenu a.nav-link.active {
            color: #fff !important;
            font-weight: bold;
        }

        .submenu-item-circle.completed {
            background-color: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
        }

        .submenu a.nav-link.active .submenu-item-circle.completed {
            background-color: #ffc107;
            border-color: #ffc107;
        }

    </style>
