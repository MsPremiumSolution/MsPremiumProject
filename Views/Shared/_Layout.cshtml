<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MSPremiumProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/MSPremiumProject.styles.css" asp-append-version="true" />

    <!-- ============================================= -->
    <!-- ESTILOS CSS PARA O SUBMENU DINÂMICO           -->
    <!-- ============================================= -->
    <style>
        /* Estilo para o link "Orçamento" quando o submenu está visível */
        .nav-link.has-active-submenu {
            background-color: rgba(0, 0, 0, 0.15); /* Destaque subtil */
            font-weight: bold;
            border-left: 4px solid #f39c12; /* Cor de destaque laranja/amarelo */
        }

        /* O container do submenu */
        .submenu {
            background-color: rgba(0, 0, 0, 0.2); /* Um pouco mais escuro que a sidebar */
            padding: 5px 0 10px 20px;
            margin: -5px 10px 10px 10px;
            border-left: 4px solid #f39c12; /* Borda alinhada com o item pai */
        }

        /* Estilo para os links dentro do submenu */
        .submenu .nav-link {
            font-size: 0.9em;
            padding: 8px 15px;
            color: rgba(255, 255, 255, 0.8); /* Cor mais suave */
            display: flex;
            align-items: center;
            border-left: none; /* Remover borda individual dos itens */
        }
        
        .submenu .nav-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }

        /* O círculo que você pediu */
        .submenu-item-circle {
            display: inline-block;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            border: 2px solid rgba(255, 255, 255, 0.8);
            margin-right: 12px;
            position: relative;
        }

        /* Destaque para o item ATIVO do submenu */
        .submenu a.nav-link.active .submenu-item-circle {
            border-color: #f39c12; /* Laranja */
        }
        
        /* O ponto laranja dentro do círculo */
        .submenu a.nav-link.active .submenu-item-circle::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #f39c12;
        }

        .submenu a.nav-link.active {
            font-weight: bold;
            color: white;
        }
    </style>
    <!-- ============================================= -->
    <!-- FIM DO BLOCO CSS                              -->
    <!-- ============================================= -->

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MSPremiumProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="d-flex">
        <nav id="sidebar" class="bg-dark text-white p-3" style="min-height: 100vh; width: 280px;">
             @if (User.Identity != null && User.Identity.IsAuthenticated)
             {
                 <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Página Inicial</a>
                 <a class="nav-link" asp-controller="Home" asp-action="ClientPainel"><i class="bi bi-bar-chart"></i> Clientes</a>

                 
                    // Verifica se estamos no contexto de um orçamento de Qualidade do Ar
                    var inQualidadeArContext = ViewData["CurrentBudgetContext"] as string == "QualidadeAr";
                 

                 <!-- Adiciona uma classe de destaque se o submenu estiver visível -->
                 <a class="nav-link @(inQualidadeArContext ? "has-active-submenu" : "")" asp-controller="Budget" asp-action="OrçamentosEmCurso"><i class="bi bi-calculator-fill"></i> Orçamento</a>

                 @if (inQualidadeArContext)
                 {
                     <div id="qualidadeArSubmenu" class="submenu">
                         <div class="d-flex justify-content-between align-items-center ps-3 pe-2 pt-2">
                             <h6 class="text-white mb-0">Qualidade do ar</h6>
                             <a asp-controller="Budget" asp-action="SelectTreatment" class="btn btn-sm btn-link text-white p-0" title="Alterar tipo de tratamento"><i class="bi bi-x-lg"></i></a>
                         </div>
                         @* Adicione a classe 'active' ao link correspondente à página atual *@
                         <a class="nav-link active" asp-controller="Budget" asp-action="EditQualidadeDoAr">
                             <span class="submenu-item-circle"></span> Coleção de dados
                         </a>
                         <a class="nav-link" asp-controller="Budget" asp-action="Objetivos">
                             <span class="submenu-item-circle"></span> Objetivos
                         </a>
                         <a class="nav-link" asp-controller="Budget" asp-action="Volumes">
                             <span class="submenu-item-circle"></span> Volumes
                         </a>
                         <a class="nav-link" asp-action="DetalheOrcamento" asp-controller="Budget">
                             <span class="submenu-item-circle"></span> Detalhe do orçamento
                         </a>
                         <a class="nav-link" asp-action="ResumoOrcamento" asp-controller="Budget">
                             <span class="submenu-item-circle"></span> Resumo do orçamento
                         </a>
                     </div>
                 }
             }
        </nav>

        <main role="main" class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2024 - MSPremiumProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>