@using Microsoft.AspNetCore.Http;
@using MSPremiumProject.ViewModels;
@{
    // Obtém o nome do controlador e da ação da rota atual
    var controller = ViewContext.RouteData.Values["controller"]?.ToString().ToLower() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString().ToLower() ?? "";

    // Condição para saber se estamos numa página de autenticação (para estilizar o link ativo)
    bool isAuthPage = controller == "account" && (action == "login" || action == "register");
    bool isAuthenticated = User.Identity != null && User.Identity.IsAuthenticated;

    // Variáveis para o submenu de Qualidade do Ar (só são relevantes se o utilizador estiver autenticado)
    var inQualidadeArContext = isAuthenticated && (ViewData["CurrentBudgetContext"] as string == "QualidadeAr");
    var stepsCompleted = ViewData["StepsCompleted"] as Dictionary<string, bool> ?? new Dictionary<string, bool>();
    Func<string, bool> IsStepCompleted = (stepName) => stepsCompleted.GetValueOrDefault(stepName);
    string activeSubmenuLinkName = ViewData["ActiveSubmenuLink"] as string ?? "";
    Func<string, bool> IsActiveLink = (actionName) => activeSubmenuLinkName == actionName;
    ulong currentQualidadeDoArId = ViewData["QualidadeDoArId"] is ulong ? (ulong)ViewData["QualidadeDoArId"] : 0;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MS Premium Solutions</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="@(isAuthenticated ? "" : "not-authenticated-layout")">

    <!-- Sidebar (SEMPRE RENDERIZADA) -->
    <div class="sidebar d-flex flex-column">
        <div class="logo">
            <img src="~/images/Logo.JPG" alt="MS Premium Solutions" class="img-fluid" />
        </div>
        <nav class="nav flex-column mt-3">
            @if (isAuthenticated)
            {
                // ===================================
                // MENU PARA UTILIZADOR AUTENTICADO
                // ===================================
                <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Página Inicial</a>
                <a class="nav-link" asp-controller="Home" asp-action="ClientPainel"><i class="bi bi-bar-chart"></i> Clientes</a>

                <a class="nav-link @(inQualidadeArContext ? "has-active-submenu" : "")" asp-controller="Budget" asp-action="OrçamentosEmCurso"><i class="bi bi-calculator-fill"></i> Orçamento</a>

                @if (inQualidadeArContext)
                {
                    <div id="qualidadeArSubmenu" class="submenu">
                        <div class="d-flex justify-content-between align-items-center ps-3 pe-2 pt-2">
                            <h6 class="text-white mb-0">Qualidade do ar</h6>
                            <a asp-controller="Budget" asp-action="SelectTreatment" class="btn btn-sm btn-link text-white p-0" title="Alterar tipo de tratamento"><i class="bi bi-x-lg"></i></a>
                        </div>

                        <a class="nav-link @(IsActiveLink("ColecaoDados") ? "active" : "")" asp-controller="Budget" asp-action="ColecaoDados" asp-route-id="@currentQualidadeDoArId">
                            <span class="submenu-item-circle @(IsStepCompleted("ColecaoDados") ? "completed" : "") @(IsActiveLink("ColecaoDados") ? "active-step" : "")"></span> Coleção de dados
                        </a>
                        <a class="nav-link @(IsActiveLink("Objetivos") ? "active" : "")" asp-controller="Budget" asp-action="Objetivos" asp-route-id="@currentQualidadeDoArId">
                            <span class="submenu-item-circle @(IsStepCompleted("Objetivos") ? "completed" : "") @(IsActiveLink("Objetivos") ? "active-step" : "")"></span> Objetivos
                        </a>
                        <a class="nav-link @(IsActiveLink("Volumes") ? "active" : "")" asp-controller="Budget" asp-action="Volumes" asp-route-id="@currentQualidadeDoArId">
                            <span class="submenu-item-circle @(IsStepCompleted("Volumes") ? "completed" : "") @(IsActiveLink("Volumes") ? "active-step" : "")"></span> Volumes
                        </a>
                        <a class="nav-link @(IsActiveLink("DetalheOrcamento") ? "active" : "")" asp-controller="Budget" asp-action="DetalheOrcamento" asp-route-id="@currentQualidadeDoArId">
                            <span class="submenu-item-circle @(IsStepCompleted("DetalheOrcamento") ? "completed" : "") @(IsActiveLink("DetalheOrcamento") ? "active-step" : "")"></span> Detalhe do orçamento
                        </a>
                        <a class="nav-link @(IsActiveLink("ResumoOrcamento") ? "active" : "")" asp-controller="Budget" asp-action="ResumoOrcamento" asp-route-id="@currentQualidadeDoArId">
                            <span class="submenu-item-circle @(IsStepCompleted("ResumoOrcamento") ? "completed" : "") @(IsActiveLink("ResumoOrcamento") ? "active-step" : "")"></span> Resumo do orçamento
                        </a>
                    </div>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Comercial"))
                {
                    <a class="nav-link" asp-controller="Admin" asp-action="AdminMenu"><i class="bi bi-gear-fill"></i> Settings</a>
                }
            }
            else
            {
                // ===================================
                // MENU PARA UTILIZADOR NÃO AUTENTICADO
                // ===================================
                <a class="nav-link @(isAuthPage ? "active" : "")" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
            }
        </nav>
        <div class="mt-auto p-3 text-center">
            <a href="#" class="btn btn-outline-light btn-sm">Ver certificações</a>
        </div>
    </div>

    <!-- Topbar (SÓ RENDERIZA SE O UTILIZADOR ESTIVER AUTENTICADO) -->
    @if (isAuthenticated)
    {
        <div class="topbar d-flex align-items-center p-2">
            <button class="menu-toggle btn btn-link text-white me-auto" id="menuToggleBtn" type="button" title="Alternar menu">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>

            <span class="me-3 text-white">Olá, <strong>@User.FindFirst("FullName")?.Value</strong></span>
            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-light btn-sm" title="Sair">
                    <i class="bi bi-box-arrow-right"></i> Sair
                </button>
            </form>
        </div>
    }

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted mt-auto">
            <div class="container-fluid">
                © 2024 - MSPremiumProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggleBtn = document.getElementById('menuToggleBtn');
            const sidebar = document.querySelector('.sidebar');

            if (menuToggleBtn && sidebar) {
                menuToggleBtn.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>