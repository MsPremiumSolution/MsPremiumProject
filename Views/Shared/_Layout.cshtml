<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-g" />
    <title>@ViewBag.Title - MS Premium Solutions</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

    <style>
        /* Estilos para o submenu. Adicione isto ao seu site.css ou aqui mesmo */
        .submenu {
            display: none; /* Escondido por defeito */
            padding-left: 20px; /* Indentação para mostrar que é um submenu */
            background-color: rgba(0,0,0,0.1); /* Um fundo ligeiramente diferente */
            border-left: 3px solid #ffc107; /* Borda amarela para destaque */
            margin-left: 10px;
            border-radius: 0 5px 5px 0;
        }

            .submenu.show {
                display: block; /* Mostra o submenu */
            }

            .submenu .nav-link {
                font-size: 0.9em; /* Texto um pouco mais pequeno */
                padding-top: .4rem;
                padding-bottom: .4rem;
            }

        .submenu-item-circle {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid #fff;
            border-radius: 50%;
            margin-right: 10px;
            vertical-align: middle;
        }

        .submenu-item.active .submenu-item-circle {
            background-color: #ffc107; /* Cor de preenchimento quando ativo */
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="logo">
            <img src="~/images/Logo.JPG" alt="MS Premium Solutions" class="img-fluid" />
        </div>
        <nav class="nav flex-column mt-3">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Página Inicial</a>
                <a class="nav-link" asp-controller="Client" asp-action="Index"><i class="bi bi-people-fill"></i> Clientes</a>

                <!-- LINK PRINCIPAL DO ORÇAMENTO -->
                <a class="nav-link" asp-controller="Budget" asp-action="Index"><i class="bi bi-calculator-fill"></i> Orçamento</a>

                <!-- SUBMENU PARA QUALIDADE DO AR -->
                <div id="qualidadeArSubmenu" class="submenu">
                    <div class="d-flex justify-content-between align-items-center ps-3 pe-2 pt-2">
                        <h6 class="text-white mb-0">Qualidade do ar</h6>
                        <button id="closeSubmenuBtn" class="btn btn-sm btn-link text-white p-0"><i class="bi bi-x-circle"></i></button>
                    </div>
                    <a class="nav-link submenu-item" asp-controller="Budget" asp-action="TipologiaConstrutiva">
                        <span class="submenu-item-circle"></span> Tipologia construtiva
                    </a>
                    <a class="nav-link submenu-item" asp-controller="Budget" asp-action="ColecaoDados">
                        <span class="submenu-item-circle"></span> Coleção de dados
                    </a>
                    <a class="nav-link submenu-item" asp-controller="Budget" asp-action="Objetivos">
                        <span class="submenu-item-circle"></span> Objetivos
                    </a>
                    <a class="nav-link submenu-item" asp-controller="Budget" asp-action="Volumes">
                        <span class="submenu-item-circle"></span> Volumes
                    </a>
                    <a class="nav-link submenu-item" asp-action="DetalheOrcamento" asp-controller="Budget">
                        <span class="submenu-item-circle"></span> Detalhe do orçamento
                    </a>
                    <a class="nav-link submenu-item" asp-action="ResumoOrcamento" asp-controller="Budget">
                        <span class="submenu-item-circle"></span> Resumo do orçamento
                    </a>
                </div>


                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link" asp-controller="Admin" asp-action="AdminMenu"><i class="bi bi-gear-fill"></i> Settings (Admin)</a>
                }
            }
            else
            {
                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
            }
        </nav>
    </div>

    <!-- Topbar (sem alterações) -->
    <div class="topbar ...">
        ...
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* SCRIPT PARA CONTROLAR O SUBMENU *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const submenu = document.getElementById('qualidadeArSubmenu');
            const closeSubmenuBtn = document.getElementById('closeSubmenuBtn');

            // Função para mostrar o submenu
            window.showQualidadeArSubmenu = function() {
                if (submenu) submenu.classList.add('show');
            }

            // Função para esconder o submenu
            window.hideQualidadeArSubmenu = function() {
                if (submenu) submenu.classList.remove('show');
            }

            // Evento para o botão de fechar
            if (closeSubmenuBtn) {
                closeSubmenuBtn.addEventListener('click', function() {
                    window.hideQualidadeArSubmenu();
                    // Opcional: redirecionar para a página principal de orçamento
                    // window.location.href = '@Url.Action("Index", "Budget")';
                });
            }

            // Lógica para manter o submenu aberto se estivermos numa das suas páginas
            const currentPath = window.location.pathname.toLowerCase();
            const submenuPaths = [
                '/budget/tipologiaconstrutiva',
                '/budget/colecaodados',
                '/budget/objetivos',
                '/budget/volumes',
                '/budget/detalheorcamento',
                '/budget/resumoorcamento'
            ];

            if (submenuPaths.some(path => currentPath.includes(path))) {
                window.showQualidadeArSubmenu();

                // Marcar o item ativo
                const activeLink = document.querySelector(`.submenu a[href*='${currentPath.split('/').pop()}']`);
                if (activeLink) {
                    activeLink.classList.add('active');
                    const circle = activeLink.querySelector('.submenu-item-circle');
                    if(circle) circle.style.backgroundColor = '#ffc107'; // Preenche o círculo
                }
            }
        });
    </script>

    @* Script para o toggle do menu principal (sem alterações) *@
    <script>
        ...
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>