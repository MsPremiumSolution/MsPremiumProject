@model IEnumerable<MSPremiumProject.Models.Localidade>

@{
    ViewData["Title"] = "Lista de Localidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-controller="Localidades" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> Adicionar Nova Localidade
        </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Nenhuma localidade encontrada. Clique em "Adicionar Nova Localidade" para começar.
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().NomeLocalidade)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Regiao)</th>
                                <th>País</th> @* Cabeçalho para o nome do país *@
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NomeLocalidade)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Regiao)</td>
                                    <td>@(item.Pais != null ? Html.DisplayFor(modelItem => item.Pais.NomePais) : "N/A")</td>
                                    <td class="text-end">
                                        @* Adicione links para Edit/Details/Delete se tiver essas actions *@
                                        @*
                                        <a asp-controller="Localidades" asp-action="Edit" asp-route-id="@item.LocalidadeId" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-controller="Localidades" asp-action="Details" asp-route-id="@item.LocalidadeId" class="btn btn-sm btn-outline-info ms-1" title="Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Localidades" asp-action="Delete" asp-route-id="@item.LocalidadeId" class="btn btn-sm btn-outline-danger ms-1" title="Apagar"
                                           onclick="return confirm('Tem a certeza que quer apagar esta localidade?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>