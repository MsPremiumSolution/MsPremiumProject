@* Ficheiro: Views/Country/CreateCountry.cshtml *@
@model MSPremiumProject.Models.Pai

@{
    ViewData["Title"] = "Adicionar Novo País";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Garanta que este caminho está correto
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

                    @* As mensagens de erro e sucesso estão ótimas. *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center"></div>
                    }
                    @if (TempData["MensagemSucesso"] != null)
                    {
                        <div class="alert alert-success mt-3 text-center">
                            @TempData["MensagemSucesso"]
                        </div>
                    }

                    @* O formulário deve apontar para a ação Create do CountryController *@
                    <form asp-action="Create" asp-controller="Country" method="post">
                        @Html.AntiForgeryToken()

                        @* Campo NomePais *@
                        <div class="form-floating mb-4">
                            <input asp-for="NomePais" class="form-control" placeholder="Nome do País" />
                            <label asp-for="NomePais"></label>
                            <span asp-validation-for="NomePais" class="text-danger"></span>
                        </div>

                        @* Adicione aqui o campo para o CodigoIso se ele fizer parte do seu modelo Pai *@
                        <div class="form-floating mb-4">
                            <input asp-for="CodigoIso" class="form-control" placeholder="Código ISO (2 letras)" />
                            <label asp-for="CodigoIso">Código ISO</label>
                            <span asp-validation-for="CodigoIso" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-save me-2"></i> Guardar País
                        </button>
                    </form>

                    <div class="mt-3 text-center">
                        @* O link de "Voltar" deve apontar para a ação Index do CountryController *@
                        <a asp-action="Index" asp-controller="Country" class="text-decoration-none">Voltar à Lista de Países</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}