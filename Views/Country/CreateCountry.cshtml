@model MSPremiumProject.Models.Pai

@{
    ViewData["Title"] = "Adicionar Novo País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center"></div>
                    }
                    @if (TempData["MensagemSucesso"] != null)
                    {
                        <div class="alert alert-success mt-3 text-center">
                            @TempData["MensagemSucesso"]
                        </div>
                    }
                    @if (TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @TempData["MensagemErro"]
                        </div>
                    }

                    <form asp-action="Create" asp-controller="Paises" method="post">
                        @Html.AntiForgeryToken()

                        @* Campo NomePais *@
                        <div class="form-floating mb-4">
                            <input asp-for="NomePais" class="form-control" placeholder="Nome do País" />
                            <label asp-for="NomePais"></label>
                            <span asp-validation-for="NomePais" class="text-danger"></span>
                        </div>

                        @* O PaisId é geralmente gerado pelo banco de dados. *@

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-save me-2"></i> Guardar País
                        </button>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Index" asp-controller="Paises" class="text-decoration-none">Voltar à Lista de Países</a>
                        @* Ou, se não tiver uma lista de países ainda, pode remover este link ou apontar para outra página *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}